#!/usr/bin/env bash
echo "Starting: LocalTunnel"
npx localtunnel --port 22023 >tunnelurl.txt &
tunnel_pid=$!
sleep 5
echo "Starting: The Server At Port 22023..."
screen -h 2048 -dmS server Server/Impostor.Server | tee server.log
main_pid=$!
sleep 2
trap "kill $tunnel_pid $main_pid" SIGTERM
trap "kill -9 $tunnel_pid $main_pid; exit" SIGKILL